<idea-plugin>
    <id>nl.petertillema.tibasic</id>
    <name>TI-Basic</name>
    <vendor email="petertillema@solcon.nl" url="https://petertillema.nl">Peter Tillema</vendor>
    <description><![CDATA[
        <h1>TI-BASIC IntelliJ plugin</h1>
        <br>
        <p>This is an IntelliJ plugin for the TI-BASIC language, used for programming the calculator. This plugin
        adds many functionalities to the editor, including but not limited to syntax highlighting, folding, DCS icon editor
        and exporting the file to an .8xp file. The full list of specifications:</p>
        <ul>
            <li>Syntax checker</li>
            <li>A bunch of local code inspections</li>
            <li>Code formatting</li>
            <li>Folding loops</li>
            <li>Syntax highlighting</li>
            <li>SourceCoder3 theme, both dark and light</li>
            <li>Color scheme editor</li>
            <li>Code style editor</li>
            <li>Navigating from/to labels</li>
            <li>Going to definitions of variables and find references</li>
            <li>Line commenting</li>
            <li>TI-OS color gutter provider</li>
            <li>Highlighting matching braces</li>
            <li>DCS icon previewer and editor (Cesium-compatible, including monochrome icons)</li>
            <li>Exporting source to .8xp file with custom settings</li>
        </ul>
    ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <idea-version since-build="213"/>

    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="TI-Basic file"
                implementationClass="nl.petertillema.tibasic.language.TIBasicFileType"
                fieldName="INSTANCE"
                language="TIBasic"
                extensions="basic"/>
        <lang.parserDefinition
                language="TIBasic"
                implementationClass="nl.petertillema.tibasic.parser.TIBasicParserDefinition"/>
        <lang.syntaxHighlighterFactory
                implementationClass="nl.petertillema.tibasic.syntax.TIBasicSyntaxHighlighterFactory"
                language="TIBasic"/>
        <colorSettingsPage
                implementation="nl.petertillema.tibasic.syntax.TIBasicColorSettingsPage"/>
        <lang.commenter
                language="TIBasic"
                implementationClass="nl.petertillema.tibasic.editor.TIBasicCommenter"/>
        <trailingSpacesOptionsProvider
                implementation="nl.petertillema.tibasic.editor.TIBasicTrailingSpacesOptionsProvider"/>
        <lang.foldingBuilder
                language="TIBasic"
                implementationClass="nl.petertillema.tibasic.editor.TIBasicLoopFoldingBuilder"/>
        <lang.formatter
                language="TIBasic"
                implementationClass="nl.petertillema.tibasic.editor.formatting.TIBasicFormattingModelBuilder"/>
        <codeStyleSettingsProvider
                implementation="nl.petertillema.tibasic.editor.formatting.TIBasicCodeStyleSettingsProvider"/>
        <langCodeStyleSettingsProvider
                implementation="nl.petertillema.tibasic.editor.formatting.TIBasicLanguageCodeStyleSettingsProvider"/>
        <lang.findUsagesProvider
                language="TIBasic"
                implementationClass="nl.petertillema.tibasic.refactoring.TIBasicFindLabelUsagesProvider"/>
        <bundledColorScheme
                order="after Light"
                id="TIBasicSourceCoder3Light"
                path="themes/TIBasicSourceCoder3Light.xml"/>
        <bundledColorScheme
                order="after Dark"
                id="TIBasicSourceCoder3Dark"
                path="themes/TIBasicSourceCoder3Dark.xml"/>
        <lang.braceMatcher
                language="TIBasic"
                implementationClass="nl.petertillema.tibasic.editor.TIBasicPairedBraceMatcher"/>
        <lang.quoteHandler
                language="TIBasic"
                implementationClass="nl.petertillema.tibasic.editor.TIBasicQuoteHandler"/>
        <colorProvider
                implementation="nl.petertillema.tibasic.editor.TIBasicElementColorProvider"/>
        <enterHandlerDelegate
                implementation="nl.petertillema.tibasic.editor.formatting.TIBasicEndEnterHandler"/>
        <configurationType
                implementation="nl.petertillema.tibasic.run.TIBasicConfigurationType"/>
        <codeInsight.lineMarkerProvider
                language="TIBasic"
                implementationClass="nl.petertillema.tibasic.editor.TIBasicDCSIconLineMarkerProvider"/>
        <platform.backend.documentation.targetProvider
                implementation="nl.petertillema.tibasic.syntax.documentation.TIBasicDocumentationTargetProvider"/>
        <annotator
                language="TIBasic"
                implementationClass="nl.petertillema.tibasic.annotator.TIBasicUnnecessaryParenthesisAnnotator"/>
        <localInspection
                enabledByDefault="true"
                language="TIBasic"
                groupKey="inspection.TIBasic.group.name"
                implementationClass="nl.petertillema.tibasic.inspections.TIBasicUnusedLabelInspection"
                key="inspection.TIBasic.unused.label.display.name"
                bundle="messages.TIBasicBundle"/>
        <localInspection
                enabledByDefault="true"
                language="TIBasic"
                groupKey="inspection.TIBasic.group.name"
                implementationClass="nl.petertillema.tibasic.inspections.TIBasicUnknownGotoTargetInspection"
                key="inspection.TIBasic.unknown.goto.target.display.name"
                bundle="messages.TIBasicBundle"/>
        <localInspection
                enabledByDefault="true"
                language="TIBasic"
                groupKey="inspection.TIBasic.group.name"
                implementationClass="nl.petertillema.tibasic.inspections.TIBasicIncompatibleOperatorOperandsInspection"
                key="inspection.TIBasic.incompatible.operands.display.name"
                bundle="messages.TIBasicBundle"/>
    </extensions>
    <resource-bundle>messages.TIBasicBundle</resource-bundle>
</idea-plugin>